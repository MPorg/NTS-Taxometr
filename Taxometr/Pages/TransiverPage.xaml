<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taxometr.Pages.TransiverPage">
    <Grid 
        ColumnDefinitions="*"
        RowDefinitions="*, *, Auto"
        RowSpacing="5"
        Padding="20">
        <Label
            FontSize="72"
            Grid.Column="0"
            Grid.Row="0"
            HorizontalOptions="Center"
            Text="{Binding Source={x:Reference StepperDigit}, Path=Value}"/>
        <Stepper 
            x:Name="StepperDigit"
            Grid.Column="0"
            Grid.Row="1"
            HorizontalOptions="Center"
            Minimum="0"
            Maximum="9"
            Increment="1"
            Value="0"/>
        <Button 
            Grid.Row="2"
            x:Name="Connect_TransmitButton"
            Text="Connect"
            Clicked="Connect_TransmitButton_Clicked"/>
    </Grid>
</ContentPage>