<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taxometr.Pages.MainPage"
             Shell.FlyoutBehavior="Flyout"
             Style="{StaticResource BasePage}">
    <Shell.TitleView>
        <StackLayout>
            <Label
                Style="{StaticResource TitleText}"
                Text="Меню таксометра"/>
        </StackLayout>
    </Shell.TitleView>

    <ContentPage.Content>
        <StackLayout
            Style="{StaticResource PageLayout}">
            
            <RelativeLayout
                VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">

                <StackLayout
                    Padding="10"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                    VerticalOptions="Fill"
                    HorizontalOptions="Fill">

                    <!--
                    <StackLayout
                        Orientation="Horizontal"
                        HorizontalOptions="CenterAndExpand"
                        HeightRequest="60">

                        <Label
                            Text="Подключено: "
                            FontSize="Large"
                            VerticalTextAlignment="Center"/>

                        <Button
                            x:Name="DeviceName"
                            FontSize="Large"
                            Clicked="OnInfoBtnClicked"
                            Style="{StaticResource LinkButton}"
                            TextTransform="None"/>
                    </StackLayout>
                    
                    
                    <Button
                        x:Name="StatusSCNOBtn"
                        Text="Статус СКНО"
                        Clicked="OnStatusSCNOBtnClicked"/>
                    -->

                    <StackLayout
                        Orientation="Horizontal"
                        HorizontalOptions="Center"
                        Padding="5">

                        <Button
                            Text="C"
                            CommandParameter="C"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                        <Button
                            Text="▲"
                            CommandParameter="Up"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                        <Button
                            Text="▼"
                            CommandParameter="Down"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                        <Button
                            Text="OK"
                            CommandParameter="OK"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                        <Button
                            Text="1"
                            CommandParameter="Num_1"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                        <Button
                            Text="2"
                            CommandParameter="Num_2"
                            WidthRequest="60"
                            Clicked="OnEmitBtnClicked"/>

                    </StackLayout>

                </StackLayout>


                <StackLayout
                    Style="{StaticResource PageLayout}"
                    RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                    RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    Padding="20"
                    x:Name="BanLayout">
                    <StackLayout
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="Center">
                        
                        <Label
                            Text="Нет подключенных устройств"
                            FontSize="Large"
                            HorizontalOptions="Center"
                            HorizontalTextAlignment="Center"
                            VerticalOptions="Center"
                            VerticalTextAlignment="Center"/>
                        <Button
                            x:Name="DevicesBtn"
                            Text="Устройства"
                            Clicked="OnDevicesBtnClicked"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"/>
                    </StackLayout>

                </StackLayout>
            </RelativeLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>