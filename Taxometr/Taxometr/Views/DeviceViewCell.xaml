<?xml version="1.0" encoding="UTF-8"?>
<ViewCell 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Taxometr.Views.DeviceViewCell"
    x:Name="Base"
    Height="80">
    <ViewCell.View>
        <StackLayout
            HeightRequest="80"
            Padding="5"
            VerticalOptions="FillAndExpand">
            <StackLayout.Resources>
                <Style TargetType="Label" BasedOn="{StaticResource BaseLightText}">
                    <Setter Property="TextColor" Value="{StaticResource TextDark}"/>
                </Style>
            </StackLayout.Resources>
            <Frame
                x:Name="ViewFrame"
                HeightRequest="70"
                Padding="0"
                CornerRadius="15"
                BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDarked}, Light={StaticResource BackgroundDarked}}"
                BorderColor="Transparent">
                <StackLayout
                    HorizontalOptions="FillAndExpand">
                    <StackLayout
                    VerticalOptions="Start"
                    HeightRequest="50"
                    Orientation="Horizontal"
                    Padding="10">
                    
                        <StackLayout
                            Orientation="Vertical">
                        
                            <Label
                                Text="{Binding CustomName}"
                                FontSize="Large"
                                VerticalOptions="FillAndExpand"
                                VerticalTextAlignment="Center"/>

                            <Label
                                x:Name="ConnectionStateLabel"
                                FontSize="Micro"
                                Text="{Binding ConnectionState}"
                                VerticalOptions="FillAndExpand"
                                VerticalTextAlignment="Center"/>

                        </StackLayout>
                    
                        <StackLayout 
                            x:Name="Buttons"
                            IsVisible="False"
                            Orientation="Horizontal"
                            HorizontalOptions="EndAndExpand"
                            Padding="-10">
                            <ImageButton
                                Padding="20"
                                x:Name="OpenCloseBtn"
                                Clicked="OnOpenCloseBtnClicked"
                                BackgroundColor="Transparent">
                                <ImageButton.Source>
                                    <FontImageSource
                                        Size="120"
                                        Color="{StaticResource TextDark}"
                                        FontFamily="IconsSolid"
                                        Glyph="{StaticResource IconArrowUp}"/>
                                </ImageButton.Source>
                            </ImageButton>
                        </StackLayout>
                    </StackLayout>
                    <Frame
                        x:Name="Info"
                        IsVisible="false"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        BackgroundColor="{StaticResource Background}"
                        BorderColor="Transparent"
                        Padding="10"
                        Margin="0"
                        CornerRadius="10">
                        
                        <StackLayout>

                            <StackLayout
                                x:Name="SerNum"
                                Orientation="Horizontal"
                                HorizontalOptions="FillAndExpand">

                                <Label
                                    Text="Заводской номер"
                                    FontSize="Subtitle"
                                    VerticalOptions="FillAndExpand"
                                    VerticalTextAlignment="Start"/>

                                <Label
                                    x:Name="SerNumValue"
                                    Text="{Binding SerNum}"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="End"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalTextAlignment="End"/>

                                <Entry
                                    x:Name="SerNumEntry"
                                    HorizontalTextAlignment="End"
                                    Keyboard="Numeric"
                                    Margin="0, -15, 0, -15"
                                    FontSize="Subtitle"
                                    HorizontalOptions="FillAndExpand"
                                    TextChanged="SerNumEntry_TextChanged"
                                    Completed="SerNumEntry_Completed"
                                    Unfocused="SerNumEntry_Unfocused"
                                    Focused="SerNumEntry_Focused"/>

                            </StackLayout>

                            <StackLayout
                                x:Name="BLEPass"
                                Orientation="Horizontal"
                                HorizontalOptions="FillAndExpand">

                                <Label
                                    Text="Пароль связи"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="End"
                                    VerticalOptions="FillAndExpand"
                                    VerticalTextAlignment="Start"/>

                                <Label
                                    x:Name="BLEPassValue"
                                    Text="{Binding BLEPass}"
                                    FontSize="Subtitle"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalTextAlignment="End"/>

                                <Entry
                                    x:Name="BLEPassEntry"
                                    HorizontalTextAlignment="End"
                                    Keyboard="Numeric"
                                    Margin="0, -15, 0, -15"
                                    FontSize="Subtitle"
                                    HorizontalOptions="FillAndExpand"
                                    TextChanged="BLEPassEntry_TextChanged"
                                    Completed="BLEPassEntry_Completed"
                                    Unfocused="BLEPassEntry_Unfocused"
                                    Focused="BLEPassEntry_Focused"/>
                                
                            </StackLayout>

                            <StackLayout
                                x:Name="AdminPass"
                                Orientation="Horizontal"
                                HorizontalOptions="FillAndExpand">

                                <Label
                                    Text="Пароль оператора"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="End"
                                    VerticalOptions="FillAndExpand"
                                    VerticalTextAlignment="Start"/>

                                <Label
                                    x:Name="AdminPassValue"
                                    Text="{Binding AdminPass}"
                                    FontSize="Subtitle"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalTextAlignment="End"/>

                                <Entry
                                    x:Name="AdminPassEntry"
                                    HorizontalTextAlignment="End"
                                    Keyboard="Numeric"
                                    Margin="0, -15, 0, -15"
                                    FontSize="Subtitle"
                                    HorizontalOptions="FillAndExpand"
                                    TextChanged="AdminPassEntry_TextChanged"
                                    Completed="AdminPassEntry_Completed"
                                    Unfocused="AdminPassEntry_Unfocused"
                                    Focused="AdminPassEntry_Focused"/>
                                
                            </StackLayout>

                            <StackLayout
                                x:Name="AutoConnect"
                                Orientation="Horizontal"
                                HorizontalOptions="FillAndExpand">

                                <Label
                                    Text="Автоподключение"
                                    FontSize="Subtitle"
                                    HorizontalTextAlignment="End"
                                    VerticalOptions="FillAndExpand"
                                    VerticalTextAlignment="Start"/>

                                <Label
                                    x:Name="AutoConnectValue"
                                    Text="{Binding AutoConnectStr}"
                                    FontSize="Subtitle"
                                    HorizontalOptions="EndAndExpand"
                                    VerticalTextAlignment="End"/>
                                
                                <Switch
                                    x:Name="AutoConnectSwitch"
                                    Toggled="OnAutoConnectSwitch_Toggled"
                                    Margin="0, 0, 0, -15"
                                    HorizontalOptions="EndAndExpand"/>
                            </StackLayout>


                            <Grid
                                ColumnDefinitions="*, 3*, *"
                                Margin="0, 20, 0, 0"
                                HorizontalOptions="FillAndExpand">

                                <ImageButton
                                    x:Name="DeleteBtn"
                                    BackgroundColor="Transparent"
                                    Padding="15"
                                    Clicked="OnDeleteBtnClicked">
                                    <ImageButton.Source>
                                        <FontImageSource
                                            Color="{StaticResource TextRedLink}"
                                            Size="100"
                                            FontFamily="IconsSolid"
                                            Glyph="{StaticResource IconTrash}"/>
                                    </ImageButton.Source>
                                </ImageButton>

                                <Button
                                    Grid.Column="1"
                                    x:Name="ConnectBtn"
                                    Clicked="OnConnectBtnClicked"/>

                                <ImageButton
                                    Grid.Column="2"
                                    x:Name="EditSaveBtn"
                                    BackgroundColor="Transparent"
                                    Padding="15"
                                    Clicked="OnEditSaveBtnClicked">
                                    <ImageButton.Source>
                                        <FontImageSource
                                            Color="{StaticResource TextLink}"
                                            Size="100"
                                            FontFamily="IconsSolid"
                                            Glyph="{StaticResource IconPen}"/>
                                    </ImageButton.Source>
                                </ImageButton>

                            </Grid>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ViewCell.View>
</ViewCell>