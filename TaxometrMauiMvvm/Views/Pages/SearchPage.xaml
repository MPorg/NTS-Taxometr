<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaxometrMauiMvvm.Views.Pages.SearchPage"
             xmlns:models="clr-namespace:TaxometrMauiMvvm.Models.Pages"
             xmlns:cells="clr-namespace:TaxometrMauiMvvm.Models.Cells"
             x:DataType="models:SearchViewModel">
    <Shell.TitleView>
        <StackLayout>
            <Label
            Style="{StaticResource TitleText}"
            Text="Поиск устройств"/>
        </StackLayout>
    </Shell.TitleView>
    <StackLayout
        Padding="10"
        BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDarked}, Light={StaticResource BackgroundLighted}}">
        <Border
            Padding="5"
            VerticalOptions="FillAndExpand"
            BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDarkGray}, Light={StaticResource BackgroundLightGray}}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="40"/>
            </Border.StrokeShape>

            <ListView
                ItemsSource="{Binding Devices}"
                ItemTapped="ListView_ItemTapped"
                BackgroundColor="Transparent"
                VerticalOptions="Start"
                HasUnevenRows="True"
                SelectionMode="None">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="{x:Type cells:SearchedDeviceViewModel}">
                        <ViewCell
                            Height="120">
                            <ViewCell.View>
                                <Grid
                                    BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDarkGray}, Light={StaticResource BackgroundLightGray}}"
                                    HeightRequest="120"
                                    Padding="10">
                                    <Border
                                        Margin="-5, 3.5, 5, -3.5"
                                        VerticalOptions="FillAndExpand"
                                        ZIndex="-2"
                                        BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDarked}, Light={StaticResource BackgroundLight}}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20"/>
                                        </Border.StrokeShape>
                                    </Border>

                                    <Border
                                        VerticalOptions="FillAndExpand"
                                        ZIndex="-1"
                                        BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDark}, Light={StaticResource BackgroundLighted}}">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="20"/>
                                        </Border.StrokeShape>
                                        <Grid
                                            Padding="5"
                                            RowDefinitions=".5*, .5*"
                                            RowSpacing="5">
                                            <Label
                                                FontSize="Large"
                                                VerticalTextAlignment="End"
                                                Text="{Binding CustomName}"/>
                                            <Label
                                                Grid.Row="1"
                                                FontSize="Micro"
                                                TextColor="{AppThemeBinding Dark={StaticResource TextColoredDark}, Light={StaticResource TextColoredLight}}"
                                                Text="{Binding ConnectionStateRU}"/>
                                        </Grid>
                                    </Border>

                                </Grid>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>

                <ListView.Footer>
                    <ActivityIndicator
                        IsRunning="True"/>
                </ListView.Footer>
            </ListView>
            
        </Border>
        
    </StackLayout>
</ContentPage>